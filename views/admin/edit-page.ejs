
<div class="col-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Edit User Page</h4>
        <p class="card-description">Edit your profile info</p>
        <form action="/edit-user/<%= user._id %>?_method=PATCH" method="POST" class="forms-sample">
          <div class="form-group">
            <label for="username">Username</label>
            <input type="text" class="form-control" value="<%= user.username %>" id="exampleInputEmail3" placeholder="Password" name="username" required>
          </div>
          <div class="form-group">
            <label for="companyID">Company ID</label>
            <input type="text" class="form-control" value="<%= user.companyID %>" id="exampleInputEmail3" placeholder="Password" name="companyID" required>
          </div>
          <div class="form-group">
            <label for="email">Email ID</label>
            <input type="email" class="form-control" value="<%= user.email %>" id="exampleInputEmail3" placeholder="Password" name="email" required>
          </div>
          <button type="submit" class="btn btn-primary mr-2">Submit</button>
          <button class="btn btn-dark"><a href="/user-page" style="color: white;">Cancel</a> </button>
        </form>
      </div>
    </div>
  </div>